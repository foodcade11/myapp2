<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Profile"
    android:background="@color/myp"
   android:layout_marginTop="30dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
      android:src="@drawable/back"

        />
    <TextView
        android:id="@+id/ename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Abdirahman Hassan"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/white"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="0613936630"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/ename"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/lbldec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/image"
        android:textColor="@color/white"

        />



    <TextView
        android:id="@+id/txtdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The definition of a description is a statement that gives details about someone or something. An example of description is a story about the places visited on a family trip. noun."
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@+id/lbldec"
        android:layout_marginTop="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
       android:background="@drawable/mybtn"
        android:layout_below="@+id/txtdec"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginRight="30dp"



        />

</RelativeLayout>